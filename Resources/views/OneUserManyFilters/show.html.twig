{% extends "MesdUserBundle::layout.html.twig" %}

{% block mesd_user_content %}
    <h1>Showing {{ entity }}'s filters</h1>

    <table class="record_properties table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity }}</td>
            </tr>
            <tr>
                <th>Filters</th>
                <td>
                    {% for filter in entity.filter %}{% if loop.index0 > 0 %},{% endif %}
                        {{ filter }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('MesdUserBundle_oneusermanyfilters') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('MesdUserBundle_oneusermanyfilters_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
</ul>
{% endblock mesd_user_content %}
