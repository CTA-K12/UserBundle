{% extends "MesdUserBundle:Filter:layout.html.twig" %}

{% block mesd_user_filter_content %}
    <h1>Filter Show</h1>

    <table class="table table-striped table-hover">
        <tr>
            <th>
                {#<a href="{{ path('MesdUserBundle_filter_edit') }}">EDIT</a>#}
            </th>
        </tr>
        <tr>
            <td>
                <table class="table table-striped table-hover">
                    <tr>
                        <th>
                            Category
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Solvents
                        </th>
                    </tr>
                    {% for filter in filters %}
                        <tr>
                            <td>
                                {{ filter['filterCategory'] }}
                            </td>
                            <td>
                                {{ filter['name'] }}
                            </td>
                            <td>
                                <table class="table table-striped table-hover">
                                    <tr>
                                        {% for join in filter['solvent'][0][0][0]['joins'] %}
                                            <th>
                                                {{ join['name'] }}
                                            </th>
                                        {% endfor %}
                                    </tr>
                                    {% for solvent in filter['solvent'] %}
                                        <tr>
                                            {% for bunch in solvent %}
                                                {% for entity in bunch %}
                                                    {% for join in entity %}
                                                        {% for association in join %}
                                                            <td>
                                                                {{ association['item'] }}
                                                            </td>
                                                        {% endfor %}
                                                    {% endfor %}
                                                {% endfor %}
                                            {% endfor %}
                                        </tr>
                                    {% endfor %}
                                </table>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </td>
        </tr>
    </table>
{% endblock mesd_user_filter_content %}
