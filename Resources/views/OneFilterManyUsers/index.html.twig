{% extends "MesdUserBundle::layout.html.twig" %}

{% block mesd_user_content %}
    <h1>One Filter For Many Users list</h1>

    <table class="records_list table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Users</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('MesdUserBundle_onefiltermanyusers_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity }}</td>
                <td>
                    {% for user in entity.user %}{% if loop.index0 > 0 %},{% endif %}
                        {{ user }}
                    {% endfor %}
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('MesdUserBundle_onefiltermanyusers_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('MesdUserBundle_onefiltermanyusers_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('MesdUserBundle_filter_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock mesd_user_content %}
